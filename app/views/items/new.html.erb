<h2>Enter Item!</h2>
<p>Return <%= link_to  "Home", root_path %></p>
<h3>Please Fill Out Form</h3>

<%= simple_form_for @item, html_options: { class: "form-horizontal" } do |f| %>
  <%= f.input :name %>
  <%= f.input :serial %>
  <%= f.input :year, collection: 2008..2014, prompt: "Production Year" %>
  <%= f.input :purchase_date, as: :string, input_html:{class: 'datepicker'}  %>
  <%= f.input :purchase_price, as: :float %>
  <%= f.input :notes, as: :text %>
  <%= f.association :employee %>
  <%= f.button :submit %>
<% end %>

<script>
  $(function(){
    $('.datepicker').datepicker();
  });
</script>